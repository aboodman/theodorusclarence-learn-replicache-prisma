// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ReplicacheClient {
  id             String @unique
  lastMutationId Int    @default(0)
}

model Realm {
  version Int @default(0)

  id String @unique

  name String

  messages Message[]
}

model Message {
  id String @unique

  from    String
  content String
  order   Int

  isDeleted Boolean @default(false)

  version Int @default(0)

  realm   Realm  @relation(fields: [realmId], references: [id])
  realmId String
}
